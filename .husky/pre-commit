echo "ğŸš€ Running pre-commit hooks..."

# Run lint-staged to check and fix staged files
echo "ğŸ“ Running lint-staged (ESLint, Prettier, and tests for affected files)..."
npx lint-staged

# Check if lint-staged succeeded
if [ $? -ne 0 ]; then
  echo "âŒ Lint-staged failed. Please fix the issues and try again."
  exit 1
fi

