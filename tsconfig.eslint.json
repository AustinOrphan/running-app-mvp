{
  "extends": "./tsconfig.json",
  "include": [
    "server.ts",
    "server/**/*.ts",
    "server/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "hooks/**/*.ts",
    "hooks/**/*.tsx",
    "**/*.config.ts",
    "**/*.config.js",
    "scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cleanup-candidates/**/*",
    "services/**/*",
    "lib/**/*",
    "test-analytics.ts"
  ]
}
