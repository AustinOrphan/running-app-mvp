{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000"],
      "startServerCommand": "npm run preview -- --port 3000 --host",
      "startServerReadyPattern": "Server readiness check completed successfully|Lighthouse CI can now begin testing|ready in|localhost:3000",
      "startServerReadyTimeout": 120000,
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--headless --no-sandbox --disable-dev-shm-usage",
        "waitUntil": "networkidle2",
        "timeout": 120000,
        "extraHeaders": {
          "User-Agent": "LighthouseCI/Performance"
        },
        "pauseAfterLoadMs": 2000,
        "networkQuietThresholdMs": 2000
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.75 }],
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["warn", { "minScore": 0.8 }],
        "categories:seo": ["warn", { "minScore": 0.75 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 2000 }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 3000 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.1 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 300 }],
        "speed-index": ["warn", { "maxNumericValue": 3500 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
