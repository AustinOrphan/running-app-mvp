# Test Environment Configuration
NODE_ENV=test

# Database
DATABASE_URL=file:./prisma/test.db
TEST_DATABASE_URL=file:./prisma/test.db

# JWT Configuration
JWT_SECRET=test-secret-key-for-integration-tests
JWT_REFRESH_SECRET=test-refresh-secret-key
JWT_ISSUER=running-app
JWT_AUDIENCE=running-app-users

# Security
LOG_SALT=test-log-salt-value
AUDIT_ENCRYPTION_KEY=test-audit-encryption-key-32chars
ENCRYPTION_KEY=test-encryption-key-for-data
BCRYPT_ROUNDS=10

# Test-specific settings
DISABLE_RATE_LIMIT_IN_TESTS=true
RUN_MIGRATIONS=true
DEBUG_TESTS=false

# Server
PORT=3002
FRONTEND_URL=http://localhost:3000

# Audit Configuration
AUDIT_STORAGE_TYPE=memory
AUDIT_RETENTION_DAYS=7
AUDIT_CLEANUP_INTERVAL_HOURS=24