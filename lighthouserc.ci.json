{
  "ci": {
    "collect": {
      "url": ["http://localhost:3000"],
      "startServerCommand": "npm run preview -- --port 3000 --host",
      "startServerReadyPattern": "Server readiness check completed successfully|Lighthouse CI can now begin testing|ready in|server running on|compiled successfully",
      "startServerReadyTimeout": 120000,
      "numberOfRuns": 1,
      "settings": {
        "chromeFlags": "--headless --no-sandbox --disable-dev-shm-usage --disable-gpu --disable-extensions --disable-background-timer-throttling --disable-backgrounding-occluded-windows --disable-renderer-backgrounding --remote-debugging-port=9223",
        "formFactor": "desktop",
        "screenEmulation": {
          "mobile": false,
          "width": 1280,
          "height": 720,
          "deviceScaleFactor": 1,
          "disabled": false
        },
        "emulatedUserAgent": "Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/98.0.4758.102 Safari/537.36 Lighthouse",
        "onlyAudits": null,
        "skipAudits": ["uses-http2"],
        "waitUntil": "networkidle2",
        "timeout": 120000,
        "pauseAfterLoadMs": 2000,
        "networkQuietThresholdMs": 2000
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["warn", { "minScore": 0.65 }],
        "categories:accessibility": ["error", { "minScore": 0.85 }],
        "categories:best-practices": ["warn", { "minScore": 0.75 }],
        "categories:seo": ["warn", { "minScore": 0.7 }],
        "first-contentful-paint": ["warn", { "maxNumericValue": 2200 }],
        "largest-contentful-paint": ["warn", { "maxNumericValue": 3500 }],
        "cumulative-layout-shift": ["warn", { "maxNumericValue": 0.12 }],
        "total-blocking-time": ["warn", { "maxNumericValue": 600 }],
        "speed-index": ["warn", { "maxNumericValue": 4500 }]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
